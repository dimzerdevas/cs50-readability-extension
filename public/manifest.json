{
  "manifest_version": 3,
  "name": "Reading Helper Extension",
  "version": "1.0.0",
  "description": "A simple React app as a Chrome extension",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["contextMenus", "scripting"],
  "background": {
    "service_worker": "background.js"
  }
}
